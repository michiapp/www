---
import michiLogoDark from '../assets/michi-logo-dark.svg';
import michiLogoLight from '../assets/michi-logo-light.svg';
---
<a href="#top" class="flex flex-row gap-2 items-center cursor-pointer">
  <img
    src={michiLogoDark.src}
    width="24"
    height="24"
    alt="Michi Logo"
    class="dark:hidden"
  />

  <img
    src={michiLogoLight.src}
    width="24"
    height="24"
    alt="Michi Logo"
    class="hidden dark:inline"
  />
  <span class="hidden md:inline text-xl font-bold mb-1">michi</span>
</a>
