---
import { Github } from '@lucide/astro';
import ThemeToggle from './ThemeToggle.astro';
import Logo from "./Logo.astro"

const githubLink = "https://github.com/michiapp/michi";
---

<header class="sticky top-0 z-50 px-6 py-4 backdrop-blur-xl bg-white/70 dark:bg-gray-900/70 border-b border-gray-200 dark:border-gray-800">
  <div class="container mx-auto flex items-center justify-between">
    <Logo/>
    <div class="flex items-center gap-2">
      <a
        href={githubLink}
        target="_blank"
        rel="noopener noreferrer"
        class="hidden md:flex items-center gap-2 px-4 py-2 border border-gray-300 dark:border-gray-700 rounded-lg text-sm font-medium hover:bg-gray-50 dark:hover:bg-gray-800 transition"
      >
        <Github size={18} />
        GitHub
      </a>
      <a
        href={githubLink}
        target="_blank"
        rel="noopener noreferrer"
        class="md:hidden flex items-center justify-center w-9 h-9 border border-gray-300 dark:border-gray-700 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-800 transition"
        aria-label="GitHub"
      >
        <Github size={18} />
      </a>
      <ThemeToggle client:load />
    </div>

  </div>
</header>
