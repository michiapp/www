---
import { Search, Globe, Terminal, Layers, History, Settings } from '@lucide/astro';
import FeatureCard from './FeatureCard.astro';
---

<section id="features" class="py-14 px-4 bg-gray-50 dark:bg-gray-900 transition-colors">
  <div class="container mx-auto max-w-6xl">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold mb-4 text-gray-900 dark:text-gray-100">Features</h2>
      <p class="text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
        Commands that make your browser feel like a supercharged terminal.
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-6 md:gap-8">
      <FeatureCard 
        icon={Search} 
        title="Shortcuts" 
        description="Create quick aliases for your most-used sites." 
        code="#michi → https://michi.run/" 
      />
      <FeatureCard 
        icon={Globe} 
        title="Sessions" 
        description="Launch groups of tabs for projects or workflows." 
        code="@dev → GitHub, Docs, Localhost" 
      />
      <FeatureCard 
        icon={Terminal} 
        title="Custom Bangs" 
        description="Search any site directly from your address bar." 
        code="!yt epic jdm cars drifting" 
      />
      <FeatureCard 
        icon={History} 
        title="History" 
        description="Review and manage your past queries and shortcuts." 
        code="michi history list" 
      />
      <FeatureCard 
        icon={Settings} 
        title="Configurable" 
        description="Customize prefixes, defaults, and behavior in YAML." 
        code="~/.michi/config.yaml" 
      />
      <FeatureCard 
        icon={Layers} 
        title="Extensible" 
        description="Add new bangs, sessions, and shortcuts as your workflow grows." 
        code='michi shortcuts add --alias "docs" --url "https://docs.example.com"' 
      />
    </div>
  </div>
</section>
